[
    {mq_seq_msg,
        [
            {msg_module, task_callback}, %callback 1、handle_message
            {ue_event,[
                {start_num, 1},
                {end_num, 10},
                {prefix, <<"ue.event.">>},
                {durable, false},
                {auto_delete, true}, %临时队列在没有订阅者时自动删除
                {exchange, <<"ex_task">>},
                {queue, <<"">>}
            ]},
            {mq_pools,[
                {rabbitmq_cfg, [
                    {module, recv_consumer},
                    {host, "127.0.0.1"},
                    {port, 5672},
                    {username, <<"username">>},
                    {password, <<"password">>},
                    {virtual_host,<<"/">>},
                    {connect_size, 2},
                    {channel_size, 5}
                ]}
            ]}
        ]
    },
    {task_dispatch,
        [
            {task_module, task_callback},  %callback  1、task_list 2、task_notice  3、task_cancel
            {node_timeout, 10000},
            {check_time, 5000},
            {retry, 3}
        ]
    },
    {mnesia_cluster,
        [
            {table_definition_mod, {task_callback, mnesia_tables, []}},
            {app_process,mnesia_cluster},
            {cluster_nodes, {[
                'mq_seq_msg@127.0.0.1',
                'mq_seq_msg1@127.0.0.1'
            ], disc}},
            {cluster_partition_handling, ignore}
        ]
    },
    {rabbitmq_pool, [
        {reconnect_method, refresh_all},
        {publish_method, confirm},
        {pools, []}]
    },
    {lager, [
        {colored, true},
        {
            colors,
            [
                {debug, "\e[0:38m"},
                {info, "\e[1;32m"},
                {notice, "\e[1;36m"},
                {warning, "\e[1;33m"},
                {error, "\e[1;31m"},
                {critical, "\e[1;35m"},
                {alert, "\e[1;44m"},
                {emergency, "\e[1;41m"}
            ]
        },
        {log_root, "/opt/apps/logs/mq_seq_msg/"},
        {async_threshold, 1000},
        {async_threshold_window, 100},
        {error_logger_redirect, true},
        {crash_log, "crash.log"},
        {crash_log_msg_size, 655360},
        {crash_log_size, 524288000},
        {crash_log_date, "$D0"},
        {crash_log_count, 100},
        {error_logger_hwm, 50},

        {handlers, [
            {lager_console_backend, [debug]},
            {lager_file_backend, [
                {formatter_config, [date, " ", time, " ", module, ":", function, ":", line, " ", " [", severity, "] ", pid, " ", message, "\n"]},
                {formatter, lager_default_formatter},
                {file, "console.log"},
                {level, debug}
            ]},
            {lager_file_backend, [
                {formatter_config, [date, " ", time, " ", module, ":", function, ":", line, " ", " [", severity, "] ", pid, " ", message, "\n"]},
                {formatter, lager_default_formatter},
                {size, 104857600},
                {date, "$D0"},
                {count, 30},
                {file, "debug.log"},
                {level, debug}
            ]},
            {lager_file_backend, [
                {formatter_config, [date, " ", time, " ", module, ":", function, ":", line, " ", " [", severity, "] ", pid, " ", message, "\n"]},
                {formatter, lager_default_formatter},
                {size, 104857600},
                {date, "$D0"},
                {count, 30},
                {file, "info.log"},
                {level, info}
            ]},
            {lager_file_backend, [
                {formatter_config, [date, " ", time, " ", module, ":", function, ":", line, " ", " [", severity, "] ", pid, " ", message, "\n"]},
                {formatter, lager_default_formatter},
                {size, 104857600},
                {date, "$D0"},
                {count, 30},
                {file, "warning.log"},
                {level, warning}
            ]},
            {lager_file_backend, [
                {formatter_config, [date, " ", time, " ", module, ":", function, ":", line, " ", " [", severity, "] ", pid, " ", message, "\n"]},
                {formatter, lager_default_formatter},
                {size, 104857600},
                {date, "$D0"},
                {count, 30},
                {file, "error.log"},
                {level, error}
            ]}
        ]}
    ]}
].
